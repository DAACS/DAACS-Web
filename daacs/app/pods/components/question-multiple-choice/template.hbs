{{#if hasReadingPassage}}
    <div class="question-content-container">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    {{assessment-submit-error hasSubmitError=hasSubmitError requestHelp=requestHelp}}
                    {{question-content itemContent=displayedQuestion.itemContent.question}}
                </div>
            </div>
        </div>
    </div>
{{/if}}
{{#if displayedQuestion}}
    <div class="question-and-answers-container">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="question-and-answers-inner">
                        {{assessment-submit-error hasSubmitError=hasSubmitError requestHelp=requestHelp}}
                        <h4 class="question-text">
                            {{mathjax-content content=questionText}}
                        </h4>
                        {{#unless hasReadingPassage}}
                            {{#if displayedQuestion.itemContent}}
                                {{question-content itemContent=displayedQuestion.itemContent.question}}
                            {{/if}}
                            <hr>
                        {{/unless}}
                        <div class="question-multiple-choice-options">
                            {{#each availableAnswers as |answer|}}
                                <div class="radio">
                                    <label>
                                        {{radio-button
                                            name=radioInputName
                                            value=answer.id
                                            aria-labelledby=(concat "question-answer-text-" answer.id)
                                            groupValue=displayedQuestion.selectedAnswer.id
                                            onChange=(action "onSelectAnswer" answer)
                                        }}
                                        <div class="question-answer-text" id="question-answer-text-{{answer.id}}">
                                            {{mathjax-content content=answer.content}}
                                        </div>
                                    </label>
                                </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/if}}
