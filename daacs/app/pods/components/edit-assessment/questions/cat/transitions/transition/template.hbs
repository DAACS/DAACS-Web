<div class="form-group">
    <h5 class="form-control-static form-control-xs">{{difficultyType.label}}</h5>
</div>
<div class="form-group">
    <input
        type="text"
        value={{if parsedTransition.lowerValueIsInf (t "admin.editAssessment.questions.cat.transitions.negInfinity") parsedTransition.lowerValue}}
        disabled={{parsedTransition.lowerValueIsInf}}
        oninput={{action "updateLowerValue" value="target.value"}}
        class="form-control form-control-sm"
        maxlength="128"
    >
    <select
        onchange={{action "updateLowerBoundType" value="target.value"}}
        disabled={{parsedTransition.lowerValueIsInf}}
        class="form-control"
    >
        <option value="[" selected={{eq parsedTransition.lowerBoundType "["}}>
            {{t "admin.editAssessment.questions.cat.transitions.inclusive"}}
        </option>
        <option value="(" selected={{eq parsedTransition.lowerBoundType "("}}>
            {{t "admin.editAssessment.questions.cat.transitions.exclusive"}}
        </option>
    </select>
</div>
<div class="form-group">
    <p class="form-control-static text-center pad-left-10 pad-right-10">
        {{t "admin.editAssessment.questions.cat.transitions.transitionTo"}}
    </p>
</div>
<div class="form-group">
    <input
        type="text"
        value={{if parsedTransition.upperValueIsInf (t "admin.editAssessment.questions.cat.transitions.infinity") parsedTransition.upperValue}}
        disabled={{parsedTransition.upperValueIsInf}}
        oninput={{action "updateUpperValue" value="target.value"}}
        class="form-control form-control-sm"
        maxlength="128"
    >
    <select
        onchange={{action "updateUpperBoundType" value="target.value"}}
        disabled={{parsedTransition.upperValueIsInf}}
        class="form-control"
    >
        <option value="]" selected={{eq parsedTransition.upperBoundType "]"}}>
            {{t "admin.editAssessment.questions.cat.transitions.inclusive"}}
        </option>
        <option value=")" selected={{eq parsedTransition.upperBoundType ")"}}>
            {{t "admin.editAssessment.questions.cat.transitions.exclusive"}}
        </option>
    </select>
</div>
