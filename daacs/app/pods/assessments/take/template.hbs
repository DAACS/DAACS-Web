<div
    class="assessment-question-container {{model.dasherizedCategory}}"
    id="assessment-content"
>
    {{assessment-question
        type=model.assessmentType
        questionGroup=currentQuestionGroup
        writingSample=currentWritingSample
        onAnswerChange=(action "onAnswerChange")
        requestHelp=(action "requestHelp")
        hasSubmitError=(or hasSubmitQuestionErrors completeAssessmentError)
        displayedQuestion=displayedQuestion
    }}
</div>