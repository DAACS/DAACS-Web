<div class="assessment-footer bottom-bar">
    <div class="container">
        <div class="row">
            <div class="col-xs-2">
                <div class="btn-toolbar">
                    <div class="btn-group dropup">
                        <button
                            class="btn btn-border-white btn-lg dropdown-toggle"
                            data-toggle="dropdown"
                            aria-haspopup="true"
                            aria-expanded="false"
                        >
                            {{t "assessment.help.label"}}
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="" {{action "openHelpDialog" model}}>{{t
                                        "assessment.help.request"
                                    }}</a></li>
                            <li><a
                                    href=""
                                    {{action
                                        "openCheatSheetDialog"
                                        assessmentContent
                                    }}
                                >{{assessmentContent.content.helpLabel}}</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-xs-10">
                <div class="btn-toolbar pull-right">
                    <div class="btn-group">
                        {{#link-to "dashboard" class="btn btn-link btn-lg"}}
                            {{t "assessment.continueLater"}}
                        {{/link-to}}
                    </div>
                    <div class="btn-group">
                        {{#loading-button
                            clicked=(action "onNextClick")
                            class=(concat
                                "btn-white btn-lg btn-wide "
                                (if disableNext "disabled")
                            )
                        }}
                            {{t "assessment.nextQuestion"}}
                        {{/loading-button}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>